<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50px"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >



    <LinearLayout
        android:id="@+id/layoutTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="70px"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/btnCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_number"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAlignment="textEnd"
            />

        <EditText
            android:id="@+id/btnResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_number"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textAlignment="textEnd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutMainBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id="@+id/layoutOneBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            >

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTwoBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            >

            <Button
                android:id="@+id/btnEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThreeBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            >

            <Button
                android:id="@+id/btnNine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_200"

                />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:onClick="equalsEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFourBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            >

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"

                />

            <Button
                android:id="@+id/btnTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"

                />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"

                />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"

                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutSubMainBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/layoutFiveBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:onClick="clearEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_700"
                android:layout_weight="50"
                android:layout_marginRight="14px"
                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Del"
                android:onClick="deleteEvent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_700"
                android:layout_weight="50"
                android:layout_marginRight="14px"
                />


        </LinearLayout>

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>